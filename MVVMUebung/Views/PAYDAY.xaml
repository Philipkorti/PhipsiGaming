<UserControl x:Class="MVVMUebung.Views.PAYDAY"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMUebung.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Command="{Binding DownloadComman}" Content="{Binding PlayDownload}"></Button>
            <TextBlock Grid.Row="1" Text="{Binding DownloadStatus}"></TextBlock>
            <ProgressBar Value="{Binding Percent}"></ProgressBar>
        </StackPanel>
        
        
    </Grid>
</UserControl>
